
        <section id="edit-container">
            <div class="edit-container-info">
                <h1>Edit Announcement</h1>
                <form method="post">
                    <label>Name:</label>
                    <input type="text" id="name" name="name" value="{{item.name}}">
                    <label>Image:</label>
                    <input type="text" id="image" name="image" value="{{item.image}}">
                    <label>Price:</label>
                    <input type="number" id="price" name="price" value="{{item.price}}">
                    <label>Description:</label>
                    <textarea name="description"
                        id="description">{{item.description}}</textarea>
                    <label>Payment method:</label>
                    <select id="payment" name="payment">
                        <option value="crypto-wallet">Crypto Wallet</option>
                        <option value="credit-card">Credit Card</option>
                        <option value="debit-card">Debit Card</option>
                        <option value="{{item.payment}}" selected>{{item.payment}}</option>
                    </select>
                    <input type="submit" id="btn" value="EDIT"></input>
                </form>
            </div>
        </section>
