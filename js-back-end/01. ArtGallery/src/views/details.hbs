<main>
    <section id="details-page">
        <h1>Details</h1>
        <article class="details-card">

            <article class="details-card-text">
                <h2>Title:<br> {{picture.title}}</h2>
                <h3>Author: alex01</h3>
                <h3>Painting technique: {{picture.technique}}</h3>
                <h3>Certificate of authenticity: {{picture.certificate}}</h3>

                <!-- If there is no registered user, do not display buttons-->
                <div class="buttons">
                    <!-- Only for registered user and author of the publication -->
                    <a href="/gallery/edit" class="btn-edit">Edit</a>
                    <a href="/gallery/delete" class="btn-delete">Delete</a>
                    <!-- logged in user who has not yet shared the publication-->
                    <a href="/gallery/share" class="btn-share">Share publication</a>
                    <!-- logged in user who has already shared the publication-->
                    <p class="shared-pub">You already shared this publication</p>
                </div>

            </article>

            <article class="details-card-image">
                <img src="{{picture.pictureUrl}}" alt="{{picture.title}}">
            </article>

        </article>
    </section>
</main>