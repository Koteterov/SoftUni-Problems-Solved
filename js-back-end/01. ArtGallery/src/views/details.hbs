<main>
    <section id="details-page">
        <h1>Details</h1>
        <article class="details-card">

            <article class="details-card-text">
                <h2>Title:<br> {{picture.title}}</h2>
                <h3>Author: {{picture.author.username}}</h3>
                <h3>Painting technique: {{picture.technique}}</h3>
                <h3>Certificate of authenticity: {{picture.certificate}}</h3>

                <!-- If there is no registered user, do not display buttons-->
                {{#if user}}
                <div class="buttons">
                    <!-- Only for registered user and author of the publication -->
                    {{#if isAuthor}}
                    <a href="/gallery/edit/{{picture._id}}" class="btn-edit">Edit</a>
                    <a href="/gallery/delete/{{picture._id}}" class="btn-delete">Delete</a>
                    {{else}}
                    <!-- logged in user who has not yet shared the publication-->
                    <a href="/gallery/share/{{picture._id}}" class="btn-share">Share publication</a>
                    
                    {{/if}}
                    <!-- logged in user who has already shared the publication-->
                    <p class="shared-pub">You already shared this publication</p>
                </div>
                {{/if}}

            </article>

            <article class="details-card-image">
                <img src="{{picture.pictureUrl}}" alt="{{picture.title}}">
            </article>

        </article>
    </section>
</main>