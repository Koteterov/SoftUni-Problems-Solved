<section id="catalog">
    <h1>All posts</h1>
    <div class="band">

        <!-- If there are posts for wildlife in the database display each of them -->

        {{#each items}}

        <div class="flip flip-vertical">
            <div class="front">
                <img src="{{image}}" alt="{{name}}">
                <h1 class="text-shadow">Key word: {{keyword}}</h1>
            </div>
            <div class="back">
                <h2>{{title}}</h2>
                <p>Description: {{description}}</p>
                <a href="/items/details/{{_id}}" class="details">Details</a>
            </div>
        </div>

        {{else}}
        <!-- If there are still no posts for wildlife in the database display: -->
        <div class="no-posts">
            <div class="no-posts-img">
                <img src="/static/img/animal.jpg" alt="image_nature_3">
            </div>
            <p class="no-offer">There are no posts yet...</p>
        </div>

        {{/each}}


    </div>
</section>