

        <section id="edit-container">
            <div class="edit-container-info">
                <h1>Edit Blog</h1>
                <form method="post">
                    <label>Title:</label>
                    <input name="title" type="text" id="name" value="{{item.title}}">

                    <label>Image:</label>
                    <input name="image" type="text" id="image"
                        value="{{item.image}}">

                    <label>Content:</label>
                    <textarea id="content"
                        name="content">{{item.content}}</textarea>

                    <label>Blog Category:</label>
                    <input name="category" type="text" id="catelory" value={{item.category}}>

                    <input type="submit" id="btn" value="EDIT">
                </form>
            </div>
        </section>
